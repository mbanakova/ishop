<%- include('../includes/head', {pageTitle: 'Signup' }) %>

  </head>

  <body>

    <%- include('../includes/header') %>
      <main>
        <h1>Создать новый аккаунт</h1>
        <form action="" method="">
          <div>
            <label for="email">E-mail</label>
            <input type="email" id="email" name="email" required>
          </div>
          <div>
            <label for="conform-email">Conform E-mail</label>
            <input type="email" id="conform-email" name="conform-email" required>
          </div>
          <div>
            <label for="password">Password</label>
            <input type="password" id="password" name="password" minlength="6" required>
          </div>
          <hr>
          <div>
            <label for="fullname">Fullname</label>
            <input type="text" id="fullname" name="fullname" required>
          </div>
          <div>
            <label for="street">Street</label>
            <input type="text" id="street" name="street" required>
          </div>
          <div>
            <label for="postal">Postal Code</label>
            <input type="text" id="postal" name="postal" minlength="6" maxlength="6" required>
          </div>
          <div>
            <label for="city">City</label>
            <input type="text" id="city" name="city" required>
          </div>
          <button class="button">Create an account</button>
          <p id="switch-form">
            <a href="/login">Login instead</a>
          </p>
        </form>
      </main>

      <%- include('../includes/footer') %>